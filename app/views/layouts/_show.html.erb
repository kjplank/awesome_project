<!-- Responsive panel example-->

<div class="row">
  <div class="col-md-offset-1 col-md-10">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @theme.innovation %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <% if @theme.video.present? %>
            <div class="embed-container">
              <%= embed(@theme.video) %>
            </div>
            <% end %>
            <dl class="dl-horizontal">
              <dt>What makes it so great?</dt>
              <dd><%= @theme.reason %></dd>

              <% if theme.url.present? %>
              <dt>Website</dt>
              <dd><a href="/<%= theme.url %>"><%= theme.url %></a></dd>
              <% end %>
            </dl>

            <div class="btn-group btn-group-justified">
              <a href="/<%= @route %>s/<%= theme.id %>" class="btn btn-primary">
                <i class="fa fa-search-plus"></i>
              </a>

              <a href="/<%= @route %>s/<%= theme.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_<%= @route %>/<%= theme.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
