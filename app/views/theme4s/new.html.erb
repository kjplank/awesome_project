<!-- Validation failure messages -->

<% if @theme4.errors.any? %>
  <% @theme4.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Theme4</h3>
      </div>
      <div class="panel-body">
        <form action="/create_theme4" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for innovation -->
          <div class="form-group">
            <label for="innovation" class="col-sm-2 control-label">
              Innovation
            </label>
            <div class="col-sm-10">
              <textarea id="innovation" name="innovation" placeholder="Innovation" class="form-control" rows="3"><%= @theme4.innovation %></textarea>
            </div>
          </div>

          <!-- Label and input for reason -->
          <div class="form-group">
            <label for="reason" class="col-sm-2 control-label">
              Reason
            </label>
            <div class="col-sm-10">
              <textarea id="reason" name="reason" placeholder="Reason" class="form-control" rows="3"><%= @theme4.reason %></textarea>
            </div>
          </div>

          <!-- Label and input for url -->
          <div class="form-group">
            <label for="url" class="col-sm-2 control-label">
              Url
            </label>
            <div class="col-sm-10">
              <input type="text" id="url" name="url" placeholder="Url" class="form-control" value="<%= @theme4.url %>">
            </div>
          </div>

          <!-- Label and input for image -->
          <div class="form-group">
            <label for="image" class="col-sm-2 control-label">
              Image
            </label>
            <div class="col-sm-10">
              <input type="text" id="image" name="image" placeholder="Image" class="form-control" value="<%= @theme4.image %>">
            </div>
          </div>

          <!-- Label and input for video -->
          <div class="form-group">
            <label for="video" class="col-sm-2 control-label">
              Video
            </label>
            <div class="col-sm-10">
              <input type="text" id="video" name="video" placeholder="Video" class="form-control" value="<%= @theme4.video %>">
            </div>
          </div>

          <!-- Label and input for innovation_votes -->
          <div class="form-group">
            <label for="innovation_votes" class="col-sm-2 control-label">
              Innovation votes
            </label>
            <div class="col-sm-10">
              <input type="text" id="innovation_votes" name="innovation_votes" placeholder="Innovation votes" class="form-control" value="<%= @theme4.innovation_votes %>">
            </div>
          </div>

          <!-- Label and input for user_id -->
          <div class="form-group">
            <label for="user_id" class="col-sm-2 control-label">
              User
            </label>
            <div class="col-sm-10">
              <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @theme4.user_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Theme4
              </button>
              or
              <a href="/theme4s">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
